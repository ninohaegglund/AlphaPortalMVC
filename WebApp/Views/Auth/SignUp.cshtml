@using WebApp.Models
@model SignUpViewModel
@{
    ViewData["Title"] = "Become a Member";
}

<section id="signup" class="card">
    @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
    {
        <div class="alert-notification error">
            @ViewBag?.ErrorMessage
        </div>
    }

    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="card-body">
        <form asp-controller="Auth" asp-action="SignUp" method="post" enctype="multipart/form-data" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />

            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="FirstName"></label>
                    <span asp-validation-for="FirstName"></span>
                </div>
                <input asp-for="FirstName" />
            </div>

            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="LastName"></label>
                    <span asp-validation-for="LastName"></span>
                </div>
                <input asp-for="LastName" />
            </div>

            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                </div>
                <input asp-for="Email" />
            </div>
            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                </div>
                <input asp-for="Password" value="@Model?.Password" />
            </div>
            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <input asp-for="ConfirmPassword" value="@Model?.ConfirmPassword" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-submit">Create Account</button>
            </div>

        </form>
    </div>

    <div class="card-footer">
        <span>Already have an account?</span>
        <a asp-controller="Auth" asp-action="SignIn">Log In</a>
    </div>

</section>